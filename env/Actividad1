n = int(input("Ingrese la cantidad de números: "))
numeros = [int(input(f"Ingrese el número {i+1}: ")) for i in range(n)]  # Usamos una comprensión de lista para generar la lista de números

print("Lista completa:", numeros)

pares = [numero for numero in numeros if numero % 2 == 0]  # Usamos una comprensión de lista para filtrar los números pares
impares = [numero for numero in numeros si numero % 2 != 0]  # Usamos una comprensión de lista para filtrar los números impares

print("Números pares:", pares)
print("Números impares:", impares)



